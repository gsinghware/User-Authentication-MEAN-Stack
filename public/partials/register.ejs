
<div class="container" ng-controller="registerController as registerCtrl">
    <div class="row">
        <div class="col-md-4">
            
            <div class="alert alert-danger" ng-hide="!error">
                <strong>Error: </strong> {{ error }}
            </div>

            <div class="panel panel-default">
                
                <div class="panel-heading">
                    <h3 class="panel-title">Sign Up</h3>
                </div>

                <div class="panel-body">

                    <form method="POST" role="form" name="userForm" ng-submit="userForm.$valid && registerCtrl.register()" novalidate="">
                        <div class="form-group">
                            <input ng-model="registerCtrl.data.username" type="text" class="form-control" name="username" placeholder="Username" ng-minlength="3" ng-maxlength="15" pattern="^[a-zA-Z0-9_]*$" ng-required="true">
                            
                            <div ng-show="userForm.$submitted || userForm.username.$touched">
                                <p ng-show="userForm.username.$error.required">Username is required. (3-15)</p>
                                <p ng-show="userForm.username.$error.minlength">Username is too short. (3-15)</p>
                                <p ng-show="userForm.username.$error.maxlength">Username is too Long. (3-15)</p>
                                <p ng-show="userForm.username.$error.pattern">Username must only contain alphanumerics or an underscore</p>
                            </div>
                            
                            <input ng-model="registerCtrl.data.password" type="password" class="form-control" name="password" placeholder="Password" ng-minlength="6" ng-required="true">
                            <div ng-show="userForm.$submitted || userForm.password.$touched">
                                <p ng-show="userForm.password.$error.required">Password is required.</p>
                                <p ng-show="userForm.password.$error.minlength">Password must be 6 or more characters long.</p>
                            </div>
                        
                            <input ng-model="registerCtrl.data.email" type="email" class="form-control" name="email" placeholder="Email" ng-required="true">
                            <div ng-show="userForm.$submitted || userForm.email.$touched">
                                <p ng-show="userForm.email.$error.required">Email is required.</p>
                                <p ng-show="userForm.$error.email">Enter valid email address.</p>
                            </div>
                        </div>
                    
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                    <hr>

                    <center><a href="user/login">Already have an account?</a></center>

                </div>

            </div>   

        </div>
    </div>
</div>
