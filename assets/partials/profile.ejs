<div class="container" ng-controller="profileController as profileCtrl">
    <div class="row col-sm-6">

        <div class="control-group">
            <form method="POST" role="form" name="profileForm" ng-submit="profileCtrl.updateProfile()">
 
                <legend>Profile</legend>
                
                <div class="row">
                    <div class="form-group">
                        <label for="email" class="col-sm-4 control-label text-right">Username</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="username" value="{{ mainCtrl.user.username }}" ng-disabled="mainCtrl.user.username">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="email" class="col-sm-4 control-label text-right">Email</label>
                        <div class="col-sm-8">
                            <input type="text" ng-model="email" class="form-control" name="email">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="email" class="col-sm-4 control-label text-right"></label>
                        <div class="col-sm-8">
                            <button type="submit" class="btn btn-primary ">Update Profile</button>
                        </div>
                    </div>
                </div>
                
            </form>
        </div> <!-- end control group -->

        <div class="control-group">
            <form method="POST" role="form" name="passwordForm" ng-submit="profileCtrl.updatePassword()">

                <legend>Change Password</legend>

                <div class="row">
                    <div class="form-group">
                        <label for="email" class="col-sm-4 control-label text-right">Current Password</label>
                        <div class="col-sm-8">
                            <input ng-model="profileCtrl.data.password" type="password" class="form-control" name="Password">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="email" class="col-sm-4 control-label text-right">New Password</label>
                        <div class="col-sm-8">
                            <input ng-model="profileCtrl.data.newPassword" type="password" class="form-control" name="newPassword">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="email" class="col-sm-4 control-label text-right">Confirm New Password</label>
                        <div class="col-sm-8">
                            <input ng-model="profileCtrl.data.confirmNewPassword" ng-model="email" type="password" class="form-control" name="confirmNewPassword">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="email" class="col-sm-4 control-label text-right"></label>
                        <div class="col-sm-8">
                            <button type="submit" class="btn btn-primary ">Update Password</button>
                        </div>
                    </div>
                </div>

            </form>
        </div> <!-- end control group -->

    </div> <!-- end outter row -->
</div> <!-- end container -->

