<div class="container" ng-controller="userController as userCtrl">
    <div class="row col-sm-6">
        <div class="panel panel-default">
            
            <div class="panel-heading">
                <h3 class="panel-title">Profile</h3>
            </div>
            
            <div class="panel-body">
                <div class="form-group">
                <label for="name" class="col-sm-4 control-label text-right">Name</label>
                <h5>{{ name }}</h5>
            </div>
            
            <div class="form-group">
                <label for="email" class="col-sm-4 control-label text-right">Email</label>
                <h5>{{ email }}</h5>
            </div>

            <div class="form-group">
                <label for="email" class="col-sm-4 control-label text-right">Type</label>
                <h5>{{ type }}</h5>
            </div>

        </div>
    </div>
</div>