<div class="container" ng-controller="userController as userCtrl">

    <div class="row col-sm-6">
        <div class="panel panel-default">
            
            <div class="panel-heading">
                <h3 class="panel-title">Profile <span ng-if="user.type == 'Admin'" ng-click="testUser()" class="pull-right glyphicon glyphicon-edit"></span></h3>
            </div>
            
            <div class="panel-body">
                
                <div class="form-group">
                    <div class="row col-sm-12">
                        <label>Name</label>
                        <h5>{{ name }}</h5>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row col-sm-12">
                        <label>Email</label>
                        <h5>{{ email }}</h5>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row col-sm-12">
                        <label>Type</label>
                        <h5>{{ type }}</h5>
                    </div>
                </div>
            
            </div>
        </div>
    </div>
</div>